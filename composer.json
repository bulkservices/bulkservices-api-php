{
    "name": "yacows/bulkservices_api_php",
    "description": "A php package to consume the Yacows API",
    "keywords": [
        "php",
        "package",
        "bulkservices",
        "yacows"
    ],
    "homepage": "https://github.com/bulkservices/bulkservices-api-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Hugo Carvalho",
            "email": "hugo@yacows.com.br",
            "homepage": "http://bulkservices.com.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3"
    },
    "autoload": {
        "psr-4": {
            "Yacows\\Bulkservices\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yacows\\Bulkservices\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
